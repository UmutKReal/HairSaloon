<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BarberSaloon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BarberSaloon.styles.css" asp-append-version="true" />
    <!-- Animasyon ve Stil için CSS -->
    <style>
        /* Navbar butonlarına özel stil ve animasyon */
        .navbar .nav-link {
            position: relative;
            overflow: hidden;
            display: inline-block;
            font-size: 18px; /* Yazı boyutunu değiştirdim */
            font-family: 'Arial', sans-serif; /* Font ailesini değiştirdim */
            transition: color 0.3s ease;
        }

            .navbar .nav-link:before {
                content: '';
                position: absolute;
                width: 100%;
                height: 2px;
                background-color: #007bff; /* Buton alt çizgisi rengi */
                left: -100%;
                bottom: 0;
                transition: all 0.3s ease;
            }

            .navbar .nav-link:hover:before {
                left: 0;
            }

            /* Buton üzerine tıklama animasyonu */
            .navbar .nav-link:active {
                transform: scale(0.95); /* Buton tıklanırken küçülür */
                transition: transform 0.1s ease;
            }

        /* Hover efekti ile yazı rengini değiştirme */
        .navbar-nav .nav-link:hover {
            color: #ff5733; /* Hover (üzerine gelince) yazı rengini değiştirir */
            font-weight: bold; /* Yazıyı kalın yapar */
        }
    </style>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light py-4 fixed-top">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Burada d-flex ve justify-content-center sınıflarını navbar-nav'e ekliyoruz -->
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark mx-3" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark mx-3" asp-area="" asp-controller="Home" asp-action="Login">Giriş</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark mx-3" asp-area="" asp-controller="Home" asp-action="Servis">Servisler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark mx-3" asp-area="" asp-controller="Home" asp-action="Randevu">Randevu Al</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="margin-top: 100px;">
        <!-- Navbar'ın üst kısmında boşluk bırakmak için margin-top kullanıyoruz -->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BarberSaloon - VeyselAras & Umut Kuzyaka
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
